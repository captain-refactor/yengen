{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "Sample application"
    },
    "paths": {
        "/products": {
            "get": {
                "parameters": [
                    {
                        "in": "query",
                        "name": "includeThings",
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "default": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        },
                        "description": "get all products"
                    }
                }
            },
            "post": {
                "responses": {
                    "default": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        },
                        "description": "create new product"
                    }
                }
            }
        },
        "/product/{sku}": {
            "parameters": [
                {
                    "in": "path",
                    "name": "sku",
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "get": {
                "responses": {
                    "default": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        },
                        "description": "get one product by sku"
                    }
                },
                "requestBody": {
                    "content": {
                        "default": {
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "title": "Product",
                "type": "object",
                "properties": {
                    "sku": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "prices": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
